<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundmain"
    android:orientation="vertical"
    tools:context=".ManageBusinessCard">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        app:cardCornerRadius="20dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/add_business_card_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedcorners"
                    android:radius="100dp"
                    android:text="Upload Business Card Details"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAllCaps="false"
                    app:strokeColor="#E1DBDB"
                    app:icon="@drawable/ic_baseline_cloud_upload_24"
                    app:iconSize="30dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/edit_business_card_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedcorners"
                    android:radius="100dp"
                    android:text="Update Business Card Details"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAllCaps="false"
                    app:strokeColor="#E1DBDB"
                    app:icon="@drawable/ic_baseline_edit_note_24"
                    app:iconSize="30dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/delete_business_ard_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedcorners"
                    android:radius="100dp"
                    android:text="Delete Business Card Details"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    app:strokeColor="#E1DBDB"
                    app:icon="@drawable/ic_baseline_delete_24"
                    app:iconSize="30dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/view_business_card_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedcorners"
                    android:radius="100dp"
                    android:text="View Business Card Card"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAllCaps="false"
                    app:strokeColor="#E1DBDB"
                    app:icon="@drawable/ic_baseline_remove_red_eye_24"
                    app:iconSize="30dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>



</LinearLayout>