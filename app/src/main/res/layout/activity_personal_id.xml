<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalId">

    <LinearLayout
        android:id="@+id/personalidlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/identitycard"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/identity_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:src="@drawable/profileicon"
            app:civ_border_color="@color/light_blue_900"
            app:civ_border_width="2dp"></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/id_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_alternates_light"
            android:text="Name here"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:fontFamily="@font/montserrat_alternates_light"
            android:text="Personal Card"
            android:textStyle="bold"
            android:textSize="20dp"></TextView>
        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_uid_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"

                android:fontFamily="@font/montserrat_alternates_light"
                android:text="UID : x24QJQCZoGZHWJ4hpj1aj7erlqt1"
                android:textStyle="bold"
                android:textSize="16dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/emaillogo"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/id_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_light"
                android:textStyle="bold"
                android:autoLink="email"
                android:text="exampleemail@gmail.com"
                android:textColorLink="@color/black"
                android:textSize="20dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/phonelogo"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/id_phone_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_light"
                android:text="+918329067360"
                android:autoLink="phone"
                android:textColorLink="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/phonelogo"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/id_phone_txt2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_light"
                android:text="+918329067360"
                android:autoLink="phone"
                android:textColorLink="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/birthdaylogo"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/id_date_birth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_light"
                android:text="dd mon yyyy"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/bloodgroup_logo"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/bloodgrptxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates_light"
                android:text="b_grp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"></TextView>
        </LinearLayout>





        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/id_qrcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>