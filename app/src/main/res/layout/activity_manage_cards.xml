<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundmain"
    tools:context=".ManageCards">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="0dp"
        app:cardCornerRadius="20dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="20dp">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manage_social_media_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedcorners"
                    android:radius="100dp"
                    android:text="Manage Social Media Card"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAllCaps="false"
                    app:strokeColor="#E1DBDB"
                    app:icon="@drawable/instagram_white"
                    app:iconSize="30dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manage_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedcorners"
                    android:padding="20dp"
                    android:radius="100dp"
                    android:text="Manage Personal Card"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:icon="@drawable/ic_baseline_person_24"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="30dp"
                    app:strokeColor="#E1DBDB" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manage_gaming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedcorners"
                    android:radius="100dp"
                    android:text="Manage Gaming Card"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAllCaps="false"
                    app:strokeColor="#E1DBDB"
                    app:icon="@drawable/ic_baseline_games_24"
                    app:iconSize="30dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manage_business"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundedcorners"
                    android:radius="100dp"
                    android:text="Manage Business Card"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:textAllCaps="false"
                    app:strokeColor="#E1DBDB"
                    app:icon="@drawable/ic_baseline_business_24"
                    app:iconSize="30dp"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    />
            </LinearLayout>


        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>